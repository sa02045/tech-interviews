generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
    relationMode = "prisma"
}

model Post {
    id           String    @id @default(cuid())
    createAt     DateTime  @default(now())
    title        String 
    content      String @db.VarChar(255)
    category     String
    authorId     String
    stars        Int       @default(0)
    likes        Int       @default(0)
    @@index([authorId])
}